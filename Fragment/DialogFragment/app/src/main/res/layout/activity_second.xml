<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.study.tedkim.dialogfragment.SecondActivity">

    <Button
        android:text="Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_normal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="No Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_normal"
        android:layout_alignRight="@+id/button_normal"
        android:layout_alignEnd="@+id/button_normal"
        android:id="@+id/button_no_title" />

    <Button
        android:text="No Frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_no_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button_no_frame" />

    <Button
        android:text="Holo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_no_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button_holo" />

    <Button
        android:text="Holo Light Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_holo"
        android:id="@+id/button_holo_light_dialog" />

    <Button
        android:text="Holo Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_holo_light"
        android:layout_below="@+id/button_holo_light_dialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Holo Light Panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_holo_light_panel"
        android:layout_below="@+id/button_holo_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="No Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_no_input"
        android:layout_below="@+id/button_no_frame" />
</RelativeLayout>
